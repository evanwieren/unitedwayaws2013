<h2><%= @need.title %></h2>
<br>
<h4>Description:</h4>
<%= @need.description %>
<br><br>
<% if Attendance.where(user_id: current_user.id, need_id: params[:need_id]).first %>
  <%= form_tag attend_user_path(current_user) + "?need_id=" + params[:id], :method => 'get', :id => 'session_donor_form' do %>
    <%= submit_tag 'Attend', class: 'btn btn-primary btn-large' %>
  <% end %>
<% else %>
  <%= form_tag remove_user_path(current_user) + "?need_id=" + params[:id], :method => 'get', :id => 'session_donor_form' do %>
      <%= submit_tag 'Cancel Attendance', class: 'btn btn-primary btn-large' %>
    <% end %>
<% end %>